#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)" ;;
	3) notify-send "ðŸ–¥ CPU module " "\- Shows CPU temperature.
- Click to show intensive processes.
- % is of single core." ;;
esac

#TEMPERATURE
#load=$(sensors | awk '/Package id 0/ {print "ðŸŒ¡"$4}' | sed 's/\.[0-9]//; s/+//')
load=$(sensors | awk '/Package id 0/ {print $4}' | sed 's/\.[0-9]//; s/+//')

#LOAD PERCENTAGE
#load=$(top -n1 | awk 'NR==3 {print "ðŸ–©"$2"%"}')

[ -n "$load" ] && echo "$load"
